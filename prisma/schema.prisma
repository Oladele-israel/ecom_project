generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  BUYER
  SELLER
  ADMIN
}

enum ProductStatus {
  DRAFT
  ACTIVE
  OUT_OF_STOCK
  ARCHIVED
}

enum CartStatus {
  ACTIVE
  CHECKED_OUT
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}

enum VendorOrderStatus {
  PENDING
  ACCEPTED
  SHIPPED
  COMPLETED
  CANCELLED
}

enum MessageSender {
  BUYER
  SELLER
  SYSTEM
}

enum ConversationChannel {
  WEB
  WHATSAPP
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  phone        String?  @unique
  passwordHash String
  role         UserRole
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  buyerProfile  BuyerProfile?
  sellerProfile SellerProfile?
  notifications Notification[]

  @@index([role])
  @@map("users")
}

model BuyerProfile {
  id       String  @id @default(uuid())
  userId   String  @unique
  firstName String
  lastName  String
  address   String?

  user   User    @relation(fields: [userId], references: [id])
  carts  Cart[]
  orders Order[]
  @@map("buyer_profile")
}

model SellerProfile {
  id        String @id @default(uuid())
  userId    String
  firstName String
  lastName  String
  photo     String
  user      User   @relation(fields: [userId], references: [id])

  categories  Category[]
  products    Product[]
  inventories Inventory[]
  orders      OrderVendor[]
  cartItems   CartItem[]

  @@unique([userId])
  @@map("seller_profile")
}

model Category {
  id        String   @id @default(uuid())
  name      String
  slug      String
  createdAt DateTime @default(now())

  products        Product[]
  sellerProfile   SellerProfile? @relation(fields: [sellerProfileId], references: [id])
  sellerProfileId String?

  @@unique([id])
  @@map("category")
}

model Product {
  id              String             @id @default(uuid())
  categoryId      String
  name            String
  description     String?
  price           Decimal            @db.Decimal(10, 2)
  currency        String             @default("NGN")
  status          ProductStatus
  category        Category           @relation(fields: [categoryId], references: [id])
  images          ProductImage[]
  attributes      ProductAttribute[]
  inventory       Inventory?
  cartItems       CartItem[]
  orderItems      OrderItem[]
  sellerProfile   SellerProfile?     @relation(fields: [sellerProfileId], references: [id])
  sellerProfileId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([categoryId, status])
  @@map("products")
}

model ProductImage {
  id        String @id @default(uuid())
  productId String
  url       String

  product Product @relation(fields: [productId], references: [id])

  @@index([productId])
  @@map("product_images")
}

model ProductAttribute {
  id        String @id @default(uuid())
  productId String
  context   Json?

  product Product @relation(fields: [productId], references: [id])

  @@index([productId])
  @@map("product_attributes")
}

model Inventory {
  id                String   @id @default(uuid())
  productId         String
  quantity          Int
  reservedQuantity  Int      @default(0)
  lowStockThreshold Int
  updatedAt         DateTime @updatedAt

  product         Product        @relation(fields: [productId], references: [id])
  sellerProfile   SellerProfile? @relation(fields: [sellerProfileId], references: [id])
  sellerProfileId String?

  @@unique([productId])
  @@map("product_inventory")
}

model Cart {
  id        String     @id @default(uuid())
  buyerId   String
  status    CartStatus @default(ACTIVE)
  createdAt DateTime   @default(now())

  buyer BuyerProfile @relation(fields: [buyerId], references: [id])
  items CartItem[]

  @@index([buyerId, status])
  @@map("cart")
}

model CartItem {
  id        String  @id @default(uuid())
  cartId    String
  productId String
  quantity  Int
  price     Decimal @db.Decimal(10, 2)

  cart            Cart           @relation(fields: [cartId], references: [id])
  product         Product        @relation(fields: [productId], references: [id])
  sellerProfile   SellerProfile? @relation(fields: [sellerProfileId], references: [id])
  sellerProfileId String?

  @@index([cartId])
  @@map("cart_items")
}

model Order {
  id          String      @id @default(uuid())
  buyerId     String
  totalAmount Decimal     @db.Decimal(10, 2)
  status      OrderStatus
  createdAt   DateTime    @default(now())

  buyer   BuyerProfile  @relation(fields: [buyerId], references: [id])
  vendors OrderVendor[]

  @@index([buyerId])
  @@map("order")
}

model OrderVendor {
  id              String            @id @default(uuid())
  orderId         String
  subtotal        Decimal           @db.Decimal(10, 2)
  status          VendorOrderStatus
  createdAt       DateTime          @default(now())
  sellerProfile   SellerProfile?    @relation(fields: [sellerProfileId], references: [id])
  sellerProfileId String?

  order Order         @relation(fields: [orderId], references: [id])
  items OrderItem[]
  chat  Conversation?

  @@map("order_vendor")
}

model OrderItem {
  id            String  @id @default(uuid())
  orderVendorId String
  productId     String
  quantity      Int
  price         Decimal @db.Decimal(10, 2)

  vendorOrder OrderVendor @relation(fields: [orderVendorId], references: [id])
  product     Product     @relation(fields: [productId], references: [id])

  @@index([orderVendorId])
  @@map("order_items")
}

model Conversation {
  id            String              @id @default(uuid())
  orderVendorId String              @unique
  buyerId       String
  channel       ConversationChannel
  createdAt     DateTime            @default(now())

  orderVendor OrderVendor @relation(fields: [orderVendorId], references: [id])
  messages    Message[]
}

model Message {
  id             String        @id @default(uuid())
  conversationId String
  senderType     MessageSender
  content        String
  createdAt      DateTime      @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id])

  @@index([conversationId])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  type      String
  payload   Json
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId, isRead])
}
